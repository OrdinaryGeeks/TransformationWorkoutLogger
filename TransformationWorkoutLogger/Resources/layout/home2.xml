<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/scrollView1" >
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout1" >
            <TextView
                
                android:layout_marginTop="50px"
                android:text="Muscle Memory"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               
                android:id="@+id/muscleMemory" />
            <TextView
                android:layout_marginTop="30px"
                android:text="Wellness And Health"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />
            <TextView
                 android:layout_marginTop="30px"
                android:text="Fitness For Geeks"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" />
            <TextView
                 android:layout_marginTop="30px"
                android:text="Counselors Corner"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" />
            <TextView
                 android:layout_marginTop="30px"
                android:text="Lockerroom Laughter"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" />
            <TextView
                 android:layout_marginTop="30px"
                android:text="Track Workouts"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="TextClick"
                android:id="@+id/textView6" />









        </LinearLayout>
        </ScrollView>
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2" >
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2" >


                            <ImageView
                        android:src="@mipmap/workout2"
                        android:layout_width="350px"
                        android:layout_height="350px"
                        android:id="@id/imageView1"
                android:onClick="ImageClick"/>
                            <ImageView
                                android:src="@mipmap/workout3"
                                   android:layout_width="350px"
                        android:layout_height="350px"
                                android:id="@+id/imageView2"
                android:onClick="ImageClick"/>
                            <ImageView
                                android:src="@mipmap/workout4"
                                     android:layout_width="350px"
                        android:layout_height="350px"
                                android:id="@+id/imageView3"
                  android:onClick="ImageClick"/>/>

                       <TextView
                        android:text="Logic Puzzle 1"
                            android:layout_marginLeft="20px"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView1"
                  android:onClick="TextClick"/>
                        <TextView
                            android:layout_marginLeft="20px"
                            android:text="Quote from Einstein"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textView2"
                android:onClick="TextClick"/>
                        <TextView
                            android:text="Math Problem"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@id/textView3"   android:onClick="TextClick"/>




        </LinearLayout>
    </ScrollView>

















</LinearLayout>
